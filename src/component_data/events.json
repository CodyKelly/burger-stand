        },
        {
          "type":"p",
          "contents":"Let's give your stand a name:"
        },
        {
          "type": "form",
          "children": [
            {
              "type": "input",
              "subType": "text",
              "placeholder": "enter name here"
            },
            {
              "type": "input",
              "subType": "submit",
              "className": "btn",
              "value": "Let's go!"
            }
          ]
        }
      ]
    }
  ]
}
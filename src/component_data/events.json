{
  "gameEvents": 
  [
    {
      "description": "Introduces player to game and lets them name their stand",
      "extraClasses": "sm-width",
      "contents": 
      [
        {
          "type": "h1",
          "contents": "Welcome"
        },
        {
          "type": "p",
          "contents": "...to your new burger stand!"
        },
        {
          "type": "p",
